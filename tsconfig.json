// =============================
// TSCONFIG.JSON - TypeScript Compiler Configuration
// =============================
{
  // Compiler options for TypeScript
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    // Plugins for Next.js
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Path aliases
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  // Files to include in the project
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  // Files to exclude from the project
  "exclude": [
    "node_modules"
  ]
}
